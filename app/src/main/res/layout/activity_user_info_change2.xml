<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserInfoChange">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#FFE34020"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button12"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:drawableBottom="@drawable/ic_baseline_chevron_left_24"
            app:backgroundTint="#FFE34020" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:background="#FFE34020"
            android:gravity="center"
            android:text="회원정보수정"
            android:textColor="#F8F5F5"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button13"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:drawableBottom="@drawable/ic_baseline_menu_24"
            app:backgroundTint="#FFE34020" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:background="#F4F3F3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="93dp"
            android:text="세부 정보"
            android:textColor="#1E1E1E"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rectangle2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"
            android:gravity="center|left"
            android:hapticFeedbackEnabled="false"
            android:text="임신"
            android:textColor="#090909"
            android:textSize="16sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cb_fragnant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rectangle2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"
            android:gravity="center|left"
            android:text="한부모 가정"
            android:textColor="#090909"
            android:textSize="16sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cb_singleParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rectangle2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"
            android:gravity="center|left"
            android:text="장애인"
            android:textColor="#090909"
            android:textSize="16sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cb_disabled_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rectangle2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"
            android:gravity="center|left"
            android:text="관심분야"
            android:textColor="#090909"
            android:textSize="16sp"
            android:textStyle="bold" />

        <NumberPicker
            android:id="@+id/interesting_picker"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/picker_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rectangle2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"
            android:gravity="center|left"
            android:text="소득 분위"
            android:textColor="#090909"
            android:textSize="16sp"
            android:textStyle="bold" />

        <NumberPicker
            android:id="@+id/income_picker"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/picker_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rectangle2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"
            android:gravity="center|left"
            android:text="지역"
            android:textColor="#090909"
            android:textSize="16sp"
            android:textStyle="bold" />

        <NumberPicker
            android:id="@+id/location_city_picker"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/picker_icon" />

        <NumberPicker
            android:id="@+id/location_gu_picker"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/picker_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_infoChange_finish"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:text="수정완료"
            app:backgroundTint="#FFE34020" />
    </LinearLayout>


</LinearLayout>
