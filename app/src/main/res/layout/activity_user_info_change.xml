<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserInfoChange">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#FFE34020"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button12"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:drawableBottom="@drawable/ic_baseline_chevron_left_24"
            app:backgroundTint="#FFE34020" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:background="#FFE34020"
            android:gravity="center"
            android:text="회원정보수정"
            android:textColor="#F8F5F5"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button13"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:drawableBottom="@drawable/ic_baseline_menu_24"
            app:backgroundTint="#FFE34020" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:background="#F4F3F3"
        android:orientation="vertical">

        <Button
            android:id="@+id/button16"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="#F8F5F5"
            android:drawableBottom="@drawable/photoprofile"
            android:drawingCacheQuality="auto"
            android:gravity="center"
            app:backgroundTint="#F6F2F2" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="기본 정보"
            android:textColor="#1E1E1E"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rectangle2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"
            android:gravity="center|left"
            android:hapticFeedbackEnabled="false"
            android:text="아이디"
            android:textColor="#090909"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="jeonyui"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rectangle2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"
            android:gravity="center|left"
            android:text="비밀번호"
            android:textColor="#090909"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_pw"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rectangle2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"
            android:gravity="center|left"
            android:text="비밀번호확인"
            android:textColor="#090909"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_pw_check"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_pw_check"
            android:layout_width="118dp"
            android:layout_height="38dp"
            android:background="@drawable/rectangle"
            android:text="비밀번호확인"
            android:textSize="14sp"
            app:backgroundTint="#FFE34020" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rectangle2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"
            android:gravity="center|left"
            android:text="성별"
            android:textColor="#090909"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radio_man"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="남" />

        <RadioButton
            android:id="@+id/radio_woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="여" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rectangle2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"
            android:gravity="center|left"
            android:text="연락처"
            android:textColor="#090909"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_phoneNumber"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rectangle2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"
            android:gravity="center|left"
            android:text="맞춤 정보 알람"
            android:textColor="#090909"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switch_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginLeft="220dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_infoChange_finish"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:text="다음으로"
            app:backgroundTint="#FFE34020" />
    </LinearLayout>


</LinearLayout>
