<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Join">

    <EditText
        android:id="@+id/join_pw2"
        android:layout_width="331dp"
        android:layout_height="40dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/round"
        android:ems="10"
        android:hint="    비밀번호확인"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/join_gender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_id"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/main_join"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_weight="0.05"
        android:background="#FFE34020"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="회원가입"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_pre2"
        android:layout_width="34dp"
        android:layout_height="35dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="@+id/main_join"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_chevron_left_24"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/img_pre1"
        android:layout_width="34dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="@+id/main_join"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_chevron_left_24"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/img_psa"
        android:layout_width="52dp"
        android:layout_height="56dp"
        android:layout_marginTop="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_join"
        app:srcCompat="@drawable/ic_baseline_account_circle_24"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/img_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_psa"
        app:srcCompat="@drawable/ic_baseline_camera_alt_24"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="35dp"
        android:layout_height="27dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="@+id/main_join"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_menu_24"
        tools:ignore="VectorDrawableCompat" />

    <Button
        android:id="@+id/btn_photo"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_marginTop="13dp"
        android:background="#00ff0000"
        android:text=""
        app:backgroundTint="#00FFFFFF"
        app:iconTint="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_join"
        app:rippleColor="#00FFFFFF" />

    <Button
        android:id="@+id/btn_pre"
        android:layout_width="62dp"
        android:layout_height="58dp"
        android:background="#00ff0000"
        android:text=""
        app:backgroundTint="#00FFFFFF"
        app:iconTint="#00FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#00FFFFFF" />

    <Button
        android:id="@+id/btn_ham"
        android:layout_width="59dp"
        android:layout_height="52dp"
        android:background="#00ff0000"
        android:text=""
        app:backgroundTint="#00FFFFFF"
        app:iconTint="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#00FFFFFF" />

    <EditText
        android:id="@+id/join_id"
        android:layout_width="331dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round"
        android:ems="10"
        android:hint="    아이디"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:textColor="#0C0101"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_psa" />

    <EditText
        android:id="@+id/join_pw"
        android:layout_width="331dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round"
        android:ems="10"
        android:hint="    비밀번호"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_id" />

    <TextView
        android:id="@+id/join_gender"
        android:layout_width="331dp"
        android:layout_height="40dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/round"
        android:ems="10"

        android:gravity="center_vertical"
        android:text="    성별"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_pw" />

    <TextView
        android:id="@+id/join_age"
        android:layout_width="331dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round"
        android:ems="10"

        android:gravity="center_vertical"
        android:text="    나이"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_gender" />


    <TextView
        android:id="@+id/join_interesting"
        android:layout_width="331dp"
        android:layout_height="210dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round"
        android:ems="10"

        android:gravity="clip_vertical|center_vertical"
        android:text="    관심"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_age" />

    <Button
        android:id="@+id/btn_join_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="다음으로"
        android:textSize="18sp"
        android:textStyle="normal"
        app:backgroundTint="#FFE34020"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_interesting" />

    <RadioGroup
        android:id="@+id/ra_gender"
        android:layout_width="210dp"
        android:layout_height="26dp"
        android:layout_marginTop="243dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.805"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_join"><![CDATA[

        android:textColorLink="#FFE34020" />



        ]]>

        <RadioButton
            android:id="@+id/cb_men"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:buttonTint="@color/my_color"
            android:text="남자"
            android:textColor="#676767"
            android:textColorHighlight="#515151" />

        <RadioButton
            android:id="@+id/cb_women"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/my_color"
            android:text="여자"
            android:textColor="#676767"
            android:textColorHighlight="#515151" />
        android:textColorLink="#FFE34020" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/ra_like"
        android:layout_width="171dp"
        android:layout_height="207dp"
        android:layout_marginStart="114dp"
        android:layout_marginLeft="114dp"
        android:layout_marginTop="2dp"
        android:gravity="clip_vertical"
        app:layout_constraintStart_toStartOf="@+id/join_interesting"
        app:layout_constraintTop_toTopOf="@+id/join_interesting">

        <RadioButton
            android:id="@+id/cb_health"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:text="건강"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/cb_education"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:text="교육"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/cb_hire"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:text="고용"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/cb_home"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:text="주거"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/cb_culture"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:text="문화"
            android:textSize="14sp" />

    </RadioGroup>

    <TextView
        android:id="@+id/tv_age"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="292dp"
        android:gravity="center"
        android:text="청소년"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_join" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="34dp"
        android:layout_height="35dp"
        android:layout_marginTop="300dp"
        android:gravity="center"
        android:text="세"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/join_age"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/join_age_picker"
        app:layout_constraintTop_toBottomOf="@+id/main_join" />

    <NumberPicker
        android:id="@+id/join_age_picker"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="256dp"
        android:layout_marginLeft="256dp"
        app:layout_constraintBottom_toBottomOf="@+id/join_age"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/join_age"
        app:layout_constraintVertical_bias="0.7"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>